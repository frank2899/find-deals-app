{
  "name": "next-js-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "cypress run",
    "open:e2e": "cypress open",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "test:unit": "jest"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@netlify/plugin-nextjs": "^5.7.4",
    "@reduxjs/toolkit": "^2.2.7",
    "@sparticuz/chromium": "113.0.1",
    "eslint-config-prettier": "^9.1.0",
    "framer-motion": "^11.5.4",
    "next": "14.2.10",
    "prettier": "^3.3.3",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "redux-localstorage-simple": "^2.5.1",
    "styled-components": "^6.1.13"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.14.2",
    "eslint": "^9.10.0",
    "eslint-config-next": "^14.2.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "netlify-plugin-chromium": "^1.1.4",
    "postcss": "^8",
    "puppeteer-core": "20.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "tabWidth": 4,
    "printWidth": 160
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}
